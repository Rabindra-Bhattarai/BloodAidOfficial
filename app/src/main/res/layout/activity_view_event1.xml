<!-- res/layout/activity_view_event.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_margin="16dp" />

        <!-- RecyclerView for Single Event -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:layout_margin="16dp" />

    </LinearLayout>

    <!-- res/layout/item_event.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Title -->
        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Hosted By -->
        <TextView
            android:id="@+id/eventHost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hosted by: Host Name"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/eventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Event Location"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Event Date"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Time -->
        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: Event Time"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>



