<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.EndEventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A+:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/aPositiveInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/aNegativeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B+:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/bPositiveInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/bNegativeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O+:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/oPositiveInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O-:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/oNegativeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB+:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/abPositiveInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB-:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <EditText
                android:id="@+id/abNegativeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of blood bags"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>



        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textStyle="bold"
            android:backgroundTint="@color/red"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>